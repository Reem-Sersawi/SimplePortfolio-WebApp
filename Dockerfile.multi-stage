# ===== Stage 1: Build =====
FROM node:18-alpine AS build
WORKDIR /app
COPY src/ .
RUN echo "Static site ready"

# ===== Stage 2: Production =====
FROM nginx:alpine
WORKDIR /usr/share/nginx/html
RUN rm -rf ./*
COPY --from=build /app/ .
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
